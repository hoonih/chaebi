<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pu_cloth"
    tools:context=".ui.main.cloth.popup.PopupActivity">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷 등록"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/ft_pretendardsb"
        android:textColor="@color/black"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tx_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷을 대표할 이름을 입력해주세요"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tx_title"
        app:layout_constraintTop_toBottomOf="@id/tx_title"
        android:textSize="12sp"
        android:fontFamily="@font/ft_pretendradmd"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_subtitle1"
        android:layout_marginTop="4dp"
        android:background="@drawable/et_cloth"
        android:hint="옷 이름을 입력하세요"
        android:textColorHint="#777777"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/ft_pretendradmd"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/tx_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷을 대표할 이름을 입력해주세요"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tx_title"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:textSize="12sp"
        android:fontFamily="@font/ft_pretendradmd"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_subtitle2"
        android:layout_marginTop="4dp"
        android:background="@drawable/et_cloth"
        android:hint="숫자를 입력하세요(0~100)"
        android:fontFamily="@font/ft_pretendradmd"
        android:textColorHint="#777777"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:padding="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_number"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/bt_bluebutton"
        android:text="등록하기"
        android:fontFamily="@font/ft_pretendardsb"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>